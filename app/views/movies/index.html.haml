-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get, id: "ratings_form" do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", id:"ratings_#{rating}"
  = submit_tag 'Refresh', id: "submit_tag"
%table#movies
  %thead
    %tr
      - if @flag == :title
        %th#title_header.hilite= link_to 'Movie Title', movies_path(:sort =>:title)
      - else
        %th#title_header= link_to 'Movie Title', movies_path(:sort =>:title)
      %th Rating
      -if @flag == :release_date
        %th#release_date_header.hilite= link_to 'Release Date', movies_path(:sort =>:release_date)
      - else
        %th#release_date_header= link_to 'Release Date', movies_path(:sort => :release_date)
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
